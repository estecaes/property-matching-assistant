<!DOCTYPE html>
<html>
<head>
  <title>Smart Property Matching - Demo</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <style>
    body {
      font-family: system-ui, -apple-system, sans-serif;
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
      background: #f5f5f5;
    }
    .header {
      background: white;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 20px;
    }
    .scenarios {
      display: flex;
      gap: 15px;
      margin-bottom: 20px;
    }
    .scenario-btn {
      flex: 1;
      padding: 15px;
      background: #007bff;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 16px;
    }
    .scenario-btn:hover {
      background: #0056b3;
    }
    .results {
      background: white;
      padding: 20px;
      border-radius: 8px;
      display: none;
    }
    .results.show {
      display: block;
    }
    .alert {
      padding: 15px;
      border-radius: 6px;
      margin-bottom: 15px;
    }
    .alert-danger {
      background: #f8d7da;
      border: 1px solid #f5c6cb;
      color: #721c24;
    }
    .alert-success {
      background: #d4edda;
      border: 1px solid #c3e6cb;
      color: #155724;
    }
    .profile-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 15px;
      margin-bottom: 20px;
    }
    .profile-item {
      background: #f8f9fa;
      padding: 10px;
      border-radius: 4px;
    }
    .profile-item strong {
      display: block;
      margin-bottom: 5px;
      color: #495057;
    }
    .matches {
      margin-top: 20px;
    }
    .match-card {
      background: #f8f9fa;
      padding: 15px;
      border-radius: 6px;
      margin-bottom: 10px;
      border-left: 4px solid #28a745;
    }
    .discrepancy {
      background: #fff3cd;
      border: 1px solid #ffeaa7;
      padding: 10px;
      border-radius: 4px;
      margin-bottom: 10px;
    }
    .loading {
      text-align: center;
      padding: 40px;
    }
    .json-view {
      background: #2d2d2d;
      color: #f8f8f2;
      padding: 15px;
      border-radius: 6px;
      overflow-x: auto;
      font-family: 'Courier New', monospace;
      font-size: 13px;
      margin-top: 20px;
    }
    details {
      background: #f8f9fa;
      padding: 15px;
      border-radius: 6px;
      margin-bottom: 10px;
      border-left: 4px solid #007bff;
    }
    details summary {
      cursor: pointer;
      font-size: 16px;
      margin-bottom: 10px;
      user-select: none;
    }
    details summary:hover {
      color: #007bff;
    }
    details[open] summary {
      margin-bottom: 15px;
    }
    .custom-input {
      background: white;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 20px;
      display: none;
    }
    .custom-input.active {
      display: block;
    }
    .custom-input h3 {
      margin-top: 0;
      margin-bottom: 15px;
    }
    .custom-input textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ced4da;
      border-radius: 4px;
      font-family: 'Courier New', monospace;
      font-size: 13px;
      resize: vertical;
    }
    .custom-input .controls {
      display: flex;
      gap: 15px;
      align-items: center;
      margin-top: 10px;
    }
    .custom-input .run-button {
      padding: 12px 24px;
      background: #28a745;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 16px;
    }
    .custom-input .run-button:hover {
      background: #218838;
    }
    .custom-input label {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 14px;
      color: #495057;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1>Smart Property Matching Assistant</h1>
    <p>Demo: Anti-injection lead qualification with property matching</p>
  </div>

  <div class="scenarios">
    <button class="scenario-btn" onclick="runScenario('budget_seeker')">
      Scenario 1: Budget Seeker<br>
      <small>(Happy path)</small>
    </button>
    <button class="scenario-btn" onclick="runScenario('budget_mismatch')">
      Scenario 2: Budget Mismatch<br>
      <small>(Anti-injection detection)</small>
    </button>
    <button class="scenario-btn" onclick="runScenario('phone_vs_budget')">
      Scenario 3: Phone vs Budget<br>
      <small>(Edge case handling)</small>
    </button>
    <button class="scenario-btn" onclick="toggleCustomInput()">
      Custom Messages<br>
      <small>(Test your own examples)</small>
    </button>
  </div>

  <div class="custom-input" id="customInput">
    <h3>Test Custom Messages</h3>
    <textarea id="customMessages" rows="8" placeholder='Enter JSON array of messages:

[
  {"role": "user", "content": "Busco casa en CDMX, presupuesto 5 millones"},
  {"role": "assistant", "content": "¬øCu√°ntas rec√°maras necesitas?"},
  {"role": "user", "content": "3 rec√°maras"}
]'></textarea>
    <div class="controls">
      <button class="run-button" onclick="runCustomScenario()">Run Custom Messages</button>
      <label>
        <input type="checkbox" id="useRealAPI">
        Use Real Anthropic API (requires ANTHROPIC_API_KEY in .env)
      </label>
    </div>
  </div>

  <div id="results" class="results">
    <!-- Results will be inserted here -->
  </div>

  <script>
    function toggleCustomInput() {
      const customInput = document.getElementById('customInput');
      const resultsDiv = document.getElementById('results');

      // Toggle visibility
      customInput.classList.toggle('active');

      // Clear results when opening custom input
      if (customInput.classList.contains('active')) {
        resultsDiv.innerHTML = '';
        resultsDiv.classList.remove('show');
      }
    }

    async function runScenario(scenario) {
      const resultsDiv = document.getElementById('results');
      const customInput = document.getElementById('customInput');

      // Hide custom input when running a scenario
      customInput.classList.remove('active');

      resultsDiv.innerHTML = '<div class="loading">Processing...</div>';
      resultsDiv.classList.add('show');

      try {
        const response = await fetch('/run', {
          method: 'POST',
          headers: {
            'X-Scenario': scenario,
            'Content-Type': 'application/json'
          }
        });

        const data = await response.json();
        displayResults(data, scenario);
      } catch (error) {
        resultsDiv.innerHTML = `<div class="alert alert-danger">Error: ${error.message}</div>`;
      }
    }

    async function runCustomScenario() {
      const resultsDiv = document.getElementById('results');
      const customMessages = document.getElementById('customMessages').value;
      const useRealAPI = document.getElementById('useRealAPI').checked;

      if (!customMessages.trim()) {
        resultsDiv.innerHTML = '<div class="alert alert-danger">Please enter messages in JSON format</div>';
        resultsDiv.classList.add('show');
        return;
      }

      resultsDiv.innerHTML = '<div class="loading">Processing custom messages...</div>';
      resultsDiv.classList.add('show');

      try {
        const messages = JSON.parse(customMessages);

        if (!Array.isArray(messages)) {
          throw new Error('Messages must be an array');
        }

        const headers = {
          'Content-Type': 'application/json'
        };

        if (useRealAPI) {
          headers['X-Use-Real-API'] = 'true';
        }

        const response = await fetch('/run', {
          method: 'POST',
          headers: headers,
          body: JSON.stringify({ messages: messages })
        });

        if (!response.ok) {
          throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }

        const data = await response.json();
        displayResults(data, 'custom');
      } catch (error) {
        resultsDiv.innerHTML = `<div class="alert alert-danger"><strong>Error:</strong> ${error.message}<br><small>Make sure you entered valid JSON format</small></div>`;
      }
    }

    function displayResults(data, scenario) {
      const resultsDiv = document.getElementById('results');

      let html = '';

      // Alert based on needs_human_review
      if (data.needs_human_review) {
        html += `
          <div class="alert alert-danger">
            <strong>‚ö†Ô∏è Human Review Required</strong><br>
            Discrepancies detected between LLM and heuristic extraction.
          </div>
        `;
      } else {
        html += `
          <div class="alert alert-success">
            <strong>‚úÖ Lead Qualified Successfully</strong><br>
            No discrepancies detected, ready for property matching.
          </div>
        `;
      }

      // Extraction Process Transparency (Anti-Injection Evidence)
      if (data.extraction_process) {
        html += '<h2>üîç Extraction Process (Anti-Injection Evidence)</h2>';
        html += '<p style="color: #6c757d; margin-bottom: 15px;">This section shows the dual extraction methodology that prevents prompt injection attacks.</p>';

        // Messages
        html += '<details open>';
        html += '<summary><strong>1. Conversation Messages</strong></summary>';
        html += '<p style="font-size: 14px; color: #6c757d;">Messages sent to the LLM for extraction:</p>';
        html += '<pre class="json-view">' + JSON.stringify(data.extraction_process.messages, null, 2) + '</pre>';
        html += '</details>';

        // LLM Extraction
        html += '<details>';
        html += '<summary><strong>2. LLM Extraction (Context-Aware)</strong></summary>';
        html += '<p style="font-size: 14px; color: #6c757d;">AI model extracts information using natural language understanding:</p>';
        html += '<pre class="json-view">' + JSON.stringify(data.extraction_process.llm_extraction, null, 2) + '</pre>';
        html += '</details>';

        // Heuristic Extraction
        html += '<details>';
        html += '<summary><strong>3. Heuristic Extraction (Defensive)</strong></summary>';
        html += '<p style="font-size: 14px; color: #6c757d;">Regex-based extraction provides independent verification:</p>';
        html += '<pre class="json-view">' + JSON.stringify(data.extraction_process.heuristic_extraction, null, 2) + '</pre>';
        html += '</details>';

        // Cross-Validation
        html += '<details>';
        html += '<summary><strong>4. Cross-Validation Results</strong></summary>';
        if (data.discrepancies && data.discrepancies.length > 0) {
          html += '<p style="font-size: 14px; color: #dc3545;">‚ö†Ô∏è <strong>Discrepancies detected</strong> - LLM and heuristic extractions differ significantly. This triggers human review to prevent potential manipulation.</p>';
          html += '<ul style="margin-top: 10px;">';
          data.discrepancies.forEach(disc => {
            html += `<li><strong>${disc.field}</strong>: ${disc.diff_pct}% difference (${disc.severity} severity)</li>`;
          });
          html += '</ul>';
        } else {
          html += '<p style="font-size: 14px; color: #28a745;">‚úÖ <strong>No discrepancies found</strong> - LLM and heuristic extractions match. Lead profile is reliable.</p>';
        }
        html += '</details>';

        html += '<hr style="margin: 20px 0; border: none; border-top: 1px solid #dee2e6;">';
      }

      // Lead Profile
      html += '<h2>Lead Profile</h2>';
      html += '<div class="profile-grid">';
      html += formatProfileItem('Budget', data.lead_profile.budget ? `$${formatCurrency(data.lead_profile.budget)}` : 'N/A');
      html += formatProfileItem('City', data.lead_profile.city || 'N/A');
      html += formatProfileItem('Area', data.lead_profile.area || 'N/A');
      html += formatProfileItem('Bedrooms', data.lead_profile.bedrooms || 'N/A');
      html += formatProfileItem('Confidence', data.lead_profile.confidence || 'N/A');
      html += '</div>';

      // Discrepancies
      if (data.discrepancies && data.discrepancies.length > 0) {
        html += '<h2>Discrepancies Detected</h2>';
        data.discrepancies.forEach(disc => {
          html += `
            <div class="discrepancy">
              <strong>Field: ${disc.field}</strong><br>
              LLM extracted: ${formatValue(disc.llm_value)}<br>
              Heuristic extracted: ${formatValue(disc.heuristic_value)}<br>
              ${disc.diff_pct ? `Difference: ${disc.diff_pct}%` : ''}<br>
              Severity: <span style="color: ${disc.severity === 'high' ? '#dc3545' : '#ffc107'}">${disc.severity}</span>
            </div>
          `;
        });
      }

      // Property Matches
      if (data.matches && data.matches.length > 0) {
        html += '<h2>Property Matches</h2>';
        html += '<div class="matches">';
        data.matches.forEach((match, index) => {
          html += `
            <div class="match-card">
              <strong>${index + 1}. ${match.title}</strong><br>
              Price: $${formatCurrency(match.price)} | Score: ${match.score}/100<br>
              ${match.city}, ${match.area || 'N/A'} | ${match.bedrooms} beds, ${match.bathrooms} baths<br>
              <small>Reasons: ${match.reasons.join(', ')}</small>
            </div>
          `;
        });
        html += '</div>';
      } else if (data.lead_profile.city) {
        html += '<h2>Property Matches</h2>';
        html += '<p>No matching properties found for the specified criteria.</p>';
      }

      // Metrics
      html += `
        <h2>Metrics</h2>
        <div class="profile-grid">
          ${formatProfileItem('Processing Time', `${data.metrics.qualification_duration_ms}ms`)}
          ${formatProfileItem('Conversation Turns', data.metrics.turns_count)}
          ${formatProfileItem('Status', data.status)}
        </div>
      `;

      // JSON View
      html += `
        <details>
          <summary><strong>View Raw JSON Response</strong></summary>
          <pre class="json-view">${JSON.stringify(data, null, 2)}</pre>
        </details>
      `;

      resultsDiv.innerHTML = html;
    }

    function formatProfileItem(label, value) {
      return `
        <div class="profile-item">
          <strong>${label}</strong>
          ${value}
        </div>
      `;
    }

    function formatCurrency(value) {
      return new Intl.NumberFormat('es-MX').format(value);
    }

    function formatValue(value) {
      if (typeof value === 'number' && value > 100000) {
        return `$${formatCurrency(value)}`;
      }
      return value;
    }
  </script>
</body>
</html>
